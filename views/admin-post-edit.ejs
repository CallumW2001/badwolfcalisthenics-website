<style>
  .admin-container {
    width: 75%;
    max-width: 700px;
    margin: 3rem auto;
    padding: 2.5rem;
    background-color: #111;
    border-radius: 12px;
    box-shadow: 0 0 20px rgba(0, 170, 255, 0.2);
    animation: fadeInUp 0.6s ease both;
    color: #e0e0e0;
    font-family: "Orbitron", sans-serif;
  }
  .admin-container h1 {
    font-size: 2.5rem;
    color: #00aaff;
    margin-bottom: 2rem;
    text-align: center;
  }
  .admin-form {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    width: 100%;
  }
  .admin-form label {
    font-weight: bold;
    font-size: 1rem;
  }
  .admin-form input,
  .admin-form textarea {
    width: 100%;
    background-color: #222;
    color: #e0e0e0;
    border: none;
    border-radius: 8px;
    padding: 0.85rem 1rem;
    font-size: 1rem;
  }
  .admin-form textarea {
    resize: vertical;
  }
  .admin-form button {
    background-color: #00aaff;
    color: #000;
    font-weight: bold;
    font-size: 1.1rem;
    cursor: pointer;
    border-radius: 8px;
    border: none;
    padding: 1rem;
    transition: background-color 0.3s ease;
  }
  .admin-form button:hover {
    background-color: #008fcc;
  }
  .back-link {
    display: block;
    margin-top: 1.5rem;
    text-align: center;
    color: #00aaff;
    text-decoration: none;
    font-weight: bold;
  }
  .back-link:hover {
    text-decoration: underline;
  }
</style>

<div class="admin-container">
  <h1>Edit Blog Post</h1>

  <form method="POST" action="/admin/blog/edit/<%= post.slug %>" class="admin-form">
    <label for="slug">Slug (cannot be changed)</label>
    <input type="text" id="slug" name="slug" value="<%= post.slug %>" disabled />

    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="title"
      required
      value="<%= post.title %>"
    />

    <label for="description">Meta Description</label>
    <input
      type="text"
      id="description"
      name="description"
      value="<%= post.description || '' %>"
    />

    <label for="imageUrl">Image URL</label>
    <input
      type="url"
      id="imageUrl"
      name="imageUrl"
      value="<%= post.imageUrl || '' %>"
    />

    <label for="content">Content</label>
    <textarea
      id="content"
      name="content"
      rows="10"
      required
    ><%= post.content %></textarea>

    <label for="author">Author</label>
    <input
      type="text"
      id="author"
      name="author"
      value="<%= post.author || '' %>"
    />

    <button type="submit">Save Changes</button>
  </form>

  <a href="/admin/blog" class="back-link">‚Üê Back to post list</a>
</div>
